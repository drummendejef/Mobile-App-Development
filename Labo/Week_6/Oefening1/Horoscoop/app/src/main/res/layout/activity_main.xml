<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Uw_gegevens"
        android:id="@+id/textViewGegevens"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNaam"
        android:layout_below="@+id/textViewGegevens"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewGegevens"
        android:text="@string/naam" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextVoornaam"
        android:layout_below="@+id/editTextNaam"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="@string/voornaam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/geboortejaar"
        android:id="@+id/textViewGeboortejaar"
        android:layout_below="@+id/editTextVoornaam"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextVoornaam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Geboortejaar"
        android:id="@+id/buttonStartGeboortejaar"
        android:layout_below="@+id/textViewGeboortejaar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewGeboortejaar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Selecteer_horoscoop"
        android:id="@+id/buttonStarthoroscoop"
        android:layout_below="@+id/buttonStartGeboortejaar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonStartGeboortejaar" />


</RelativeLayout>
