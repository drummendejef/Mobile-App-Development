<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.howest.nmct.launching.ExplicitActivity">

    <TextView
        android:id="@+id/txtvwRichting"
        android:text="Dingske 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOK"
        android:id="@+id/btnOK"
        android:layout_below="@+id/txtvwRichting"
        android:layout_marginTop="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCANCEL"
        android:id="@+id/btnCANCEL"
        android:layout_below="@+id/btnOK"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnOK" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSpecial"
        android:id="@+id/btnSpecial"
        android:layout_below="@+id/btnCANCEL"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnCANCEL" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnNoIdea"
        android:id="@+id/btnNoIdea"
        android:layout_below="@+id/btnSpecial"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
